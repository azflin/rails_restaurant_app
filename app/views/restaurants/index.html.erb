<h1>Restaurants</h1>

<h3><%= link_to 'Create New Restaurant', new_restaurant_path %></h3>

<table>
	<tr>
		<th>Restaurant</th>
		<th>Address</th>
		<th>City</th>
		<th>Postal Code</th>
		<th>Capacity</th>
		<th>Cuisine Type</th>
		<th>Phone Number</th>
	</tr>

	<% @restaurants.each do |restaurant| %>
		<tr>
			<td><%= link_to restaurant.name, restaurant_path(restaurant) %>
			<td><%= restaurant.address %>
			<td><%= restaurant.city %>
			<td><%= restaurant.postal_code %>
			<td><%= restaurant.capacity %>
			<td><%= restaurant.cuisine_type.name %>
			<td><%= restaurant.phone_number %>
			<td><%= link_to 'Edit', edit_restaurant_path(restaurant) %></td>
			<td><%= link_to 'Delete', restaurant_path(restaurant),
					method: :delete,
					data: { confirm: 'Are you sure?'} %></td>
		</tr>
	<% end %>
</table>

